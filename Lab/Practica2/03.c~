#include <stdio.h>
#include <string.h>
void leer (char frase[200], char letras [26]);
void imprime(char frase[200], char letras [26]);
int main(void)
{
  char frase[200], letras[26]="abcdefghijklmnopqrstuvwxyz";
  leer(frase,letras);
  imprime(frase, letas);
}
void leer (char frase[200], char letras [26]);

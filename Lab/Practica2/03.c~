void imprime(char frase[200], char letras [26])
{
  int indicador, i, j, cuenta;
  for(i=0; i<25; i++)
    {
      cuenta=0;
      for(j=0; j==strlen(frase); j++)
	{
	  if(frase[i]==frase[j])
	    cuenta+1;
	  indicador=frase[i];
	}
      if(cuenta!=0)
	printf("La letra %c, se repite %d", indicador, cuenta);
    }
}

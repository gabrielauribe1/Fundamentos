void convertir(int decimal, int opcion)
{
  switch(opcion)
    {
    case 1: 
      int i=0, bin[20], acum=0;
      do
	{
	  bin[i]=decimal%2;
	  decimal=decimal/2;
	  i++;
	}
      while(decimal!=1);
      bin[i]=1;
      acum=i;
      for(i=acum; i>=0; i--)
	printf("%d", bin[i]);
      break;
    }
}

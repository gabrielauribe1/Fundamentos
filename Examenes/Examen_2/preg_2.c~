#include<stdio.h>
#include<string.h>

void leetiempodepistas(disco[]);
void calcula_hh_mm_ss(disco [], int num);
void calcula_mm_ss(disco []);
void despliegatiempo(disco []);

int main(void)
{
  float disco[10];  
leetiempodepistas(disco);
calcula_hh_mm_ss(disco);
calcula_mm_ss(disco);
despliegatiempo(disco);
}
void leetiempodepistas()
{
  int i;
  printf("Introduzca el numero de pistas del disco (m√°ximo 10): \n");
  scanf("%d", num);
  for(i=0; i<num; i++)
    {
    printf("Introduzca el tiempo en formato mm:ss de la pista %d \n", i+1);
    scanf("%d", disco[i]);
    }
}
void calcula_hh_mm_ss(float disco[], int num)
{
  float hh=0, mm=0, ss=0, i, suma=0;
  for(i=0; i<num; i++)
    {
    suma=suma+disco[i];
    }
}
void calcula_mm_ss(disco[])
{
  float suma=0;
  int i;
  for(i=0; i<num; i++)
    {
      suma=suma+disco[i];
    }
  printf("en formato mm:ss el disco en total dura %.2f", suma);
}
void despliegatiempo(disco [])
{
  int hh=0, mm=0, ss=0, i;
   for(i=0; i<num; i++)
    {
      suma=suma+disco[i];
    }
   hh=suma/60;
   mm=suma;
   ss=0;
   printf("en formato hh:mm:ss el disco en total dura: %d:%d:%d \n", hh, mm, ss);
}

		     
     
